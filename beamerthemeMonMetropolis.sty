\usetheme[progressbar = frametitle, numbering = fraction]{metropolis}

% Define colors
\definecolor{mgris}{HTML}{132226}
\definecolor{mbleufonce}{HTML}{192E5B}
\definecolor{mbleupale}{HTML}{1D65A6}
\definecolor{morange}{HTML}{F2A104}
\definecolor{mvert}{HTML}{00743F}

% Colors
\setbeamercolor{normal text}{fg = mgris}
\setbeamercolor{alerted text}{fg = morange}
\setbeamercolor{example text}{fg = mbleufonce}
\setbeamercolor{block title example}{bg = mvert!20, fg = mvert}
\setbeamercolor{block title alerted}{bg = morange!20, fg = morange}
\setbeamercolor{block title}{bg = mbleufonce!20, fg = mbleufonce}
\setbeamercolor{block body}{fg = mbleufonce, bg = white}
\setbeamercolor{palette primary}{bg = mbleufonce, fg = white}

% Block shadow
\setbeamertemplate{blocks}[rounded][shadow = true]

% Width title separator and progress bar
\setlength{\metropolis@titleseparator@linewidth}{0.7pt}
\setlength{\metropolis@progressonsectionpage@linewidth}{0.7pt}
\setlength{\metropolis@progressinheadfoot@linewidth}{1pt}

% Navigation bar at the bottom of each slide
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[colsep = 1.5pt]{upper separation line head}
  \end{beamercolorbox}
  \begin{beamercolorbox}{section in head/foot}
    \vskip2pt\insertnavigation{\paperwidth}\vskip 4pt
  \end{beamercolorbox}%
  \begin{beamercolorbox}[colsep = 1.5pt]{lower separation line head}
  \end{beamercolorbox}
}